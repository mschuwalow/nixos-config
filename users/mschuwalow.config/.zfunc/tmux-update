if [[ -z "$TPM_HOME" ]]; then
  export TPM_HOME=$HOME/.tmux/plugins/tpm
fi

if [[ ! -f $TPM_HOME/tpm ]]; then
  if [[ ! -d "$TPM_HOME" ]]; then
    mkdir -p "$TPM_HOME"
  fi
  git clone https://github.com/tmux-plugins/tpm $TPM_HOME
else
  cd $TPM_HOME
  git pull
  cd - &> /dev/null
fi
echo

# update plugins
${TPM_HOME}/bin/install_plugins
echo

${TPM_HOME}/bin/update_plugins all
${TPM_HOME}/bin/clean_plugins
